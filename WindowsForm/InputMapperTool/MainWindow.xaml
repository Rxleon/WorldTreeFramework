<Window x:Class="InputMapperTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InputMapperTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF282828" BorderBrush="#FF282828" BorderThickness="2,2,2,2" Foreground="#FFC4C4C4">
    <WindowChrome.WindowChrome>
        <WindowChrome 
            CaptionHeight="0"
            ResizeBorderThickness="5"
            GlassFrameThickness="50"
            CornerRadius="0"
            UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 自定义标题栏 -->
        <Grid Grid.Row="0" Background="#FF282828">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="29*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                     Margin="10,0,0,0"
                     VerticalAlignment="Center"
                     Foreground="#FFC4C4C4" HorizontalAlignment="Left" Width="200" Grid.Row="1"/>

            <!--窗口按钮-->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Grid.RowSpan="2" HorizontalAlignment="Right" Width="90">

                <!--最小化按钮-->

                <Button  Click="MinimizeButton_Click" BorderBrush="#00707070" Background="#00DDDDDD" Width="30" >
                    <Path Data="M 0,0 H 10"
                          Stroke="#FFC4C4C4"
                          StrokeThickness="2"
                          Width="10"
                          Height="1"
                          Stretch="None"
                          VerticalAlignment="Center"/>
                </Button>

                <!--最大化/还原按钮-->

                <Button x:Name="MaximizeButton" Click="MaximizeButton_Click" Background="#00DDDDDD" BorderBrush="#00707070" Width="30" >
                    <Grid>

                        <!--最大化图标-->
                        <Path x:Name="MaximizeIcon"
                              Data="M 0,0 H 10 V 10 H 0 Z"
                              Stroke="#FFC4C4C4"
                              StrokeThickness="2"
                              Width="10"
                              Height="10"
                              Stretch="None"/>
                        <!--还原图标-->
                        <Grid x:Name="RestoreIcon" Visibility="Collapsed">
                            <Path Data="M 0,2 H 7 V 9 H 0 Z"
                               Stroke="#FFC4C4C4"
                               StrokeThickness="2"
                               Width="10"
                               Height="10"
                               Stretch="None"/>
                            <Path Data="M 2,0 H 9 V 7"
                               Stroke="#FFC4C4C4"
                               StrokeThickness="2"
                               Width="10"
                               Height="10"
                               Stretch="None"/>
                        </Grid>
                    </Grid>
                </Button>


                <!--关闭按钮-->

                <Button Click="CloseButton_Click" Background="#00DDDDDD" BorderBrush="#00707070"  Width="30" >
                    <Path Data="M 0,0 L 10,10 M 10,0 L 0,10"
                          Stroke="#FFC4C4C4"
                          StrokeThickness="2"
                          Width="10"
                          Height="10"
                          Stretch="None"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 窗口内容 -->
        <Grid Grid.Row="1" Background="#FF313131">
            <!-- 你的应用内容放这里 -->


        </Grid>

    </Grid>
</Window>
