<UserControl x:Class="OperateLinkFile.ToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="20" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TextBox" TextWrapping="Wrap" Text="" Width="200" Height="20"/>
                <Button Content="创建" Click="button_CreateFile" Width="50" Height="20" x:Name="CreateFileButton"/>
                <Button Content="改名" Click="button_RenameFile" Width="50" Height="20" x:Name="RenameFileButton"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
