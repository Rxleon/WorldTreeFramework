<UserControl x:Class="OperateLinkFile.Windows.InputFieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OperateLinkFile.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="500"   >
    <Grid>
        <TextBox x:Name="TextBox" TextWrapping="NoWrap" Margin="0,0,40,0" FontSize="24" Background="Black" Foreground ="White" BorderBrush="Purple" />
        <Button x:Name="Button" Click="Button_Click" Content="✔" FontSize="24" Background="Black" Foreground ="Green" BorderBrush="MediumPurple" HorizontalAlignment="Right" Width="40"/>
    </Grid>
</UserControl>
